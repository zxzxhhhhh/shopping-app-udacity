/* pages/trolley/trolley.wxss */
.no-product-card{
  position: relative;
  height: 500rpx;
  border-color: #eaeaff;
  border-radius: 25rpx;
  border-style:  solid;
  margin: 52rpx 25rpx;
  background-color: white; 
}
.no-product-image{
  position: absolute;
  height: 80rpx;
  width: 80rpx;
  left:40%;
  top: 40% ;
}
.no-product-text{
  position: absolute;
  left:33%;
  top:58%;
}
.no-product-text2{
  position: absolute;
  left:28%;
  top:68%;
}
.trolley-top{
  display: flex;
  align-items: center;
  flex-shrink: 0;
  margin: 20rpx;
  justify-content: space-between;
}
.trolley-total{
  display: flex;
  align-items: center;
  font-size: 32rpx;
  
}
.trolley-check-wrapper{
  width:36rpx;
  height: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;

  border-radius: 50%;
  background: #ECECEE;
  flex-shrink: 0;
}
.trolley-check-wrapper.grey{
  background: #ECECEE;
}
.trolley-check-wrapper.white{
  background: #FFFFFF;
}
.trolley-check-wrapper.check{
  background: #F5E069;
}

.trolley-check-img{
  width: 22rpx;
  height: 16rpx;
}
.trolley-check-text,
.trolley-edit{
  margin-left: 18rpx;
  margin-right: 33rpx;
  color: rgb(52, 55, 61, 0.8);
  font-size: 24rpx;
  line-height: 33rpx;
}

.product-list {
  position: absolute;
  left: 0;
  right: 0;
  top: 65rpx;
  bottom: 100rpx; 
  padding-bottom: 30rpx;
}
.product-card {
  display: flex;
  align-items: center;
  margin: 0 26rpx 26rpx;
  padding-left: 32rpx;
  height: 200rpx;
  background: #FFFFFF;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
  border-radius: 13rpx;
}

.product-info {
  flex: 1;
  padding: 38rpx 28rpx 0 36rpx;
  height: 100%;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 40rpx;
}

.product-img {
  flex-shrink: 0;
  margin-left: 31rpx;
  width: 160rpx;
  height: 160rpx;
}

.product-name {
  color: rgba(29, 29, 38, 0.8);
}

.product-price {
  margin-top: 3rpx;
}

.product-count {
  text-align: right;
}

.product-count-edit {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.count-minus,
.count-add {
  width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  border-radius: 50%;
  border: 3rpx solid #F6E474;
  text-align: center;
  font-size: 28rpx;
  font-weight: 900;
}

.count-now {
  margin: 0 18rpx;
}

.trolley-account{
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  padding-left: 26rpx;
  background: white;
}
.trolley-account-text{
  display: flex;
  flex: 1;
  justify-content: flex-end;
  align-items: center;
  font-size: 24rpx;
  line-height: 33rpx;
  margin-right: 20rpx;
}
.trolley-account-now{
  font-size: 35rpx;
  line-height: 42rpx;
  font-weight: bold;
}
.pay-btn{
  font-size: 30rpx;
  text-align: center;
  width: 250rpx;
  line-height: 100rpx;
  background: #F5E069;
  color: rgba(52, 55, 61, 0.5);
  border-radius: 0;
}
.pay-btn.canpay {
  color: #34373D;
}