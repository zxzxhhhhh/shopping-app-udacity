/* pages/add-comment/add-comment.wxss */
Page{
  background-color: rgba(0, 0, 0, 0.02)
}
.product-card{
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 30rpx;
  background: white;
}
.product-image{
  width: 200rpx;
  height: 200rpx;
  margin: 0 30rpx;
}
.product-detail{
  font-size: 30rpx;
  line-height: 50rpx;
}
.product-price{
  font-weight: bold;
}

.comment-cnt {
  position: relative;
  margin: 29rpx 27rpx 0;
  padding-bottom: 26rpx;
  background: #FFFFFF;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
  border-radius: 10rpx;
}

.comment-ipt {
  width: 100%;
  height: 207rpx;
  padding: 29rpx 34rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 40rpx;
}
.comment-placeholder {
  color: rgba(29, 29, 38, 0.4);
}
.uploadImage{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom: 10rpx;
  left: 20rpx;
}

.preview-cnt {
  display: flex;
  margin-top: 29rpx;
  margin-left: 29rpx;
  justify-content: center;
}

.preview-image {
  margin-right: 20rpx;
  margin-left: 20rpx;
  width: 180rpx;
  height: 180rpx;
  border-radius: 5rpx;
}
.comment-btn {
  margin: 34rpx auto;
  width: 250rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #F5E069;
  border-radius: 10rpx;
  font-size: 30rpx;
  color: #34373D;
}

.comment-btn.dis {
  color: rgba(52, 55, 61, 0.5);
} 
